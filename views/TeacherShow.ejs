<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="logo2.png" type="icon/png">
    <title>Teacher Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="/css/TeacherShow.css">
</head>

<body>

    <!-- Navbar Section -->
    <nav>
        <div class="logo">
            <div class="img">
            </div>
            <div class="title">
                <input type="checkbox" name="" id="active">
                <label for="active">
                    <img src="/images/menu-outline.svg" alt="Network Problem" class="menu">
                </label>
                <div class="sidebar">

                    <ul class="side-cont">


                        <li class="side-item">
                            <img src="/images/grid-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/admin/adminhome">Dashboard</a></p>
                        </li>
                        <li class="side-item">
                            <img src="/images/person-add-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/admin/teacherdetail">Enter Teacher Detail</a></p>
                        </li>
                        <li class="side-item">
                            <img src="/images/return-up-forward-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/admin/allocatepacket">Allocate Packet </a></p>
                        </li>
                        <li class="side-item">
                            <img src="/images/return-down-back-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/admin/recivepacket">Recieve Packet</a></p>
                        </li>
                        <li class="side-item">
                            <img src="/images/return-down-back-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/addpacket">Add Packet</a></p>
                        </li>

                        <li class="side-item">
                            <img src="/images/receipt-outline.svg" alt="" class="dashboard">
                            <p class="side-text"><a href="/admin/billui">Bill Generate</a></p>
                        </li>

                    </ul>
                    <div class="logout">
                        <img src="/images/log-in-outline.svg" alt="" class="logout-icon">
                        <p class="logout-text"><a href="">logout</a></p>
                    </div>
                </div>


            </div>
        </div>
        <div class="nav-content">


            <div class="profile">
                <img src="/images/person-outline.svg" alt="" class="user-icon">
                <span class="user-id"><span class="user-text"> Administer </span><img
                        src="/images/chevron-down-outline.svg" alt="" class="arrow"></span>
                <ul class="profile-box">
                    <li class="profile-item"> <img src="/images/person-outline.svg" alt="" class="icon"></li>
                    <li class="profile-item">Edit Profile</li>
                    <li class="profile-item">Change Password</li>
                    <li class="profile-item">Logout</li>
                </ul>


            </div>
        </div>
    </nav>

    <!-- Main Body -->
    <main>
        <div class="background"><img src="/images/1.jpg" alt="" class="background back2"></div>


        <h1 class="heading">Teacher Details</h1>

        <div class="content">


            <div class="function">
                <input type="checkbox" name="" id="check">
                <label for="check">
                    <div class="filter">Filter</div>

                </label>
                <div class="filter-func">
                    <ul>
                        <li>Teacher Detail</li>
                        <li>Recieved Packet</li>

                    </ul>
                </div>
                <div class="right">
                    <form action="" method="post">
                        <input type="text" placeholder="Search" class="function-search" name="search">

                        <button class="butt" type="submit"><img src="/images/search.svg" alt=""
                                class="search-1"></button>

                    </form>
                </div>
            </div>

            <table>
                <thead>
                    <th>Sr. No.</th>
                    <th>Teacher ID</th>
                    <th>Name</th>
                    <th>Qualification</th>
                    <th>Position </th>
                    <th>You May Edit</th>
                </thead>

                <% for(let i=0;i<data.length;i++) { %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%=data[i].Id%>
                        </td>
                        <td>
                            <%=data[i].Name%>
                        </td>
                        <td>
                            <%=data[i].Qualification%>
                        </td>
                        <td>
                            <%=data[i].Position%>
                        </td>

                        <td>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Edit
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>

                                        <form action="/update/teacheredit" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" name="id" id="userId">

                                                <div class="form-group">
                                                    <label for="userName">Teacher Id</label>
                                                    <input type="text" class="form-control" id="userName" name="Id"
                                                        required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="userEmail">Name</label>
                                                    <input type="text" class="form-control" id="userEmail" name="Name"
                                                        required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="userEmail">Qualification</label>
                                                    <input type="text" class="form-control" id="userEmail"
                                                        name="Qualification" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="userEmail">Enter Position</label>
                                                    <input type="text" class="form-control" id="userEmail"
                                                        name="Position" required>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Save changes</button>
                                            </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                    </form>


                                </div>
                            </div>
        </div>
        </td>

        </tr>

        <% } %>
            </tbody>
            </table>

            </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>